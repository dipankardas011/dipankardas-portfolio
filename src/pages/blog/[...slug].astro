---
import BaseLayout from "../../components/BaseLayout.astro";
import BlogPostCard from "../../components/BlogPostCard.astro";
import TopGradient from "../../components/TopGradient";
import { getCollection, render } from "astro:content";
import { siteConfig, socialLinks } from "../../data/site";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts
    .filter((p) => p.id !== "external-blogs")
    .map((post) => ({
      params: { slug: post.id },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const allPosts = (await getCollection("blog", ({ data }) => !data.draft))
  .filter((p) => p.id !== "external-blogs" && p.id !== post.id)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const formattedDate = post.data.date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const wordCount = post.body.trim().split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(wordCount / 200));
---

<BaseLayout
  title={`${post.data.title} - Dipankar Das`}
  description={post.data.description}
  ogImage={post.data.cover}
  blogPost={true}
>
  <!-- Reading progress bar -->
  <div id="reading-progress"></div>

  <article class="animate-fade-in">
    <!-- Header -->
    <div class="relative pt-10 pb-8 md:pt-16 md:pb-12 lg:pt-20 lg:pb-16">
      <TopGradient client:load />
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8 md:mb-14 lg:mb-20">
          <div class="flex flex-col lg:flex-row lg:items-center lg:gap-14">

            <!-- Left: title, lede, tags, meta -->
            <div class="flex-1 flex flex-col items-center text-center lg:items-start lg:text-left">
              <!-- Title -->
              <h1 class="text-2xl md:text-4xl lg:text-5xl font-display text-app-text leading-tight tracking-[var(--tracking-tight)] mb-4 lg:mb-6">
                {post.data.title}
              </h1>

              <!-- Description lede -->
              {post.data.description && (
                <p class="blog-lede mb-5 lg:mb-6">
                  {post.data.description}
                </p>
              )}

              <!-- Tags below lede -->
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-5 lg:mb-6 justify-center lg:justify-start">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-xs font-medium px-3 py-1 bg-app-surface rounded-[32px] text-app-gray-500 border border-app-gray-200 tracking-[var(--tracking-tight)]">
                      {tag}
                    </span>
                  ))}
                </div>
              )}

              <!-- Date + reading time -->
              <div class="blog-meta lg:justify-start">
                <time>{formattedDate}</time>
                <span class="blog-meta-divider"></span>
                <span>{readingTime} min read</span>
                <span class="blog-meta-divider"></span>
                <span>{wordCount.toLocaleString()} words</span>
              </div>
            </div>

            <!-- Right: cover image -->
            {post.data.cover && (
              <div class="mt-8 lg:mt-0 lg:w-[44%] shrink-0 aspect-[4/3] rounded-2xl overflow-hidden bg-app-surface">
                <img
                  src={post.data.cover}
                  alt={post.data.title}
                  class="w-full h-full object-cover"
                  loading="eager"
                />
              </div>
            )}
          </div>
        </div>

        <!-- Content + ToC grid -->
        <div class="grid grid-cols-1 xl:grid-cols-[220px_minmax(0,1fr)] gap-12 max-w-5xl mx-auto">

          <!-- Sticky ToC (xl+ only) -->
          <aside class="hidden xl:block">
            <div class="sticky top-24 pt-1">
              <p class="text-xs font-semibold uppercase tracking-widest mb-4" style="color: var(--color-app-gray-400); letter-spacing: 0.1em;">
                On this page
              </p>
              <nav id="toc-nav" class="space-y-0.5"></nav>
            </div>
          </aside>

          <!-- Main prose -->
          <div>
            <!-- Visual entry divider -->
            <div class="blog-entry-divider" aria-hidden="true">
              <span></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 shrink-0" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L9.09 8.26L2 9.27L7 14.14L5.82 21.02L12 17.77L18.18 21.02L17 14.14L22 9.27L14.91 8.26L12 2Z"/>
              </svg>
              <span></span>
            </div>

            <div class="prose prose-lg">
              <Content />
            </div>

            <!-- Author card -->
            <div class="author-card">
              <img src={siteConfig.profileImage} alt={siteConfig.name} />
              <div class="author-card-info">
                <p class="author-card-name">{siteConfig.name}</p>
                <p class="author-card-bio">{siteConfig.tagline}</p>
                <div class="author-card-links">
                  <a href={socialLinks.github} target="_blank" rel="noopener" class="author-card-link">GitHub</a>
                  <span style="color: var(--color-app-gray-300)">·</span>
                  <a href={socialLinks.twitter} target="_blank" rel="noopener" class="author-card-link">Twitter</a>
                  <span style="color: var(--color-app-gray-300)">·</span>
                  <a href={socialLinks.linkedin} target="_blank" rel="noopener" class="author-card-link">LinkedIn</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Other Posts -->
    {allPosts.length > 0 && (
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 pb-16 md:pb-20 lg:pb-24">
        <div class="border-t border-app-gray-200 pt-12 lg:pt-16">
          <div class="flex items-center justify-between mb-8 lg:mb-12">
            <h2 class="text-xl md:text-2xl lg:text-[32px] font-display text-app-text tracking-[var(--tracking-tight)]">
              Other posts
            </h2>
            <a
              href="/blog"
              class="hidden md:flex items-center px-4 py-2.5 lg:px-6 lg:py-3 bg-app-accent rounded-[32px] text-white text-sm lg:text-base tracking-[var(--tracking-tight)] hover:bg-opacity-90 transition-all duration-300"
            >
              <span class="mr-2">See all posts</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 lg:w-5 lg:h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
          </div>
          <div class="grid grid-cols-1 auto-rows-fr gap-6 p-4 border border-app-gray-200 rounded-2xl md:grid-cols-2 lg:grid-cols-3 lg:gap-8 lg:p-8">
            {allPosts.map((otherPost) => (
              <BlogPostCard
                title={otherPost.data.title}
                date={otherPost.data.date}
                description={otherPost.data.description}
                cover={otherPost.data.cover}
                slug={otherPost.id}
                showIcon={true}
              />
            ))}
          </div>
          <div class="mt-8 text-center md:hidden">
            <a
              href="/blog"
              class="inline-flex items-center px-4 py-3 bg-app-accent rounded-[32px] text-white text-sm tracking-[var(--tracking-tight)] hover:bg-opacity-90 transition-all duration-300"
            >
              <span class="mr-2">See all posts</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    )}
  </article>
</BaseLayout>

<script>
  // ---- Reading progress bar ----
  const progressBar = document.getElementById("reading-progress");
  if (progressBar) {
    const update = () => {
      const { scrollTop, scrollHeight, clientHeight } = document.documentElement;
      const pct = (scrollTop / (scrollHeight - clientHeight)) * 100;
      progressBar.style.width = Math.min(pct, 100) + "%";
    };
    window.addEventListener("scroll", update, { passive: true });
    update();
  }

  // ---- Table of Contents ----
  const headings = document.querySelectorAll(".prose h2, .prose h3");
  const tocNav = document.getElementById("toc-nav");

  if (headings.length > 0 && tocNav) {
    headings.forEach((heading, i) => {
      // Ensure heading has an id
      if (!heading.id) {
        const slug = (heading.textContent ?? "")
          .toLowerCase()
          .replace(/[^a-z0-9]+/g, "-")
          .replace(/^-|-$/g, "");
        heading.id = slug || `heading-${i}`;
      }

      const a = document.createElement("a");
      a.href = `#${heading.id}`;
      a.textContent = heading.textContent ?? "";
      a.className = `toc-link${heading.tagName === "H3" ? " toc-h3" : ""}`;
      a.dataset.headingId = heading.id;
      tocNav.appendChild(a);
    });

    // Highlight active section on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            document.querySelectorAll(".toc-link").forEach((l) =>
              l.classList.remove("toc-active")
            );
            document
              .querySelector(`.toc-link[data-heading-id="${entry.target.id}"]`)
              ?.classList.add("toc-active");
          }
        }
      },
      { rootMargin: "-80px 0px -65% 0px" }
    );

    headings.forEach((h) => observer.observe(h));
  }

  // ---- Code block language labels ----
  document.querySelectorAll(".prose pre").forEach((pre) => {
    // Shiki sets data-language on pre; fallback to reading the code class
    const lang =
      (pre as HTMLElement).dataset.language ??
      pre.querySelector("code")?.className.match(/language-(\w+)/)?.[1];
    if (lang && lang !== "plaintext" && lang !== "text") {
      (pre as HTMLElement).dataset.lang = lang;
    }
  });
</script>
