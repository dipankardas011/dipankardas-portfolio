---
import BaseLayout from "../components/BaseLayout.astro";
import AnimatedTitle from "../components/AnimatedTitle";
import Timeline from "../components/Timeline.astro";
import ContactSection from "../components/ContactSection.astro";
import { experiences, skills, languages, tools, achievements } from "../data/about";
import { siteConfig } from "../data/site";
---

<BaseLayout
  title="About - Dipankar Das"
  description="Platform engineer passionate about DevOps, Kubernetes, and sustainable computing."
>
  <div class="pt-8 pb-10 overflow-hidden md:pb-20 lg:pt-[72px] lg:pb-[120px]">
    <div class="container mx-auto mb-10 lg:mb-[128px] xl:pr-[220px]">
      <AnimatedTitle 
        title="About" 
        client:load 
      />
      
      <!-- Education Section -->
      <div class="mb-8 lg:flex lg:items-start lg:gap-[98px] lg:mb-14">
        <div class="flex items-center mb-[14px] flex-shrink-0 lg:w-[200px]">
          <div class="w-1.5 h-1.5 flex-shrink-0 bg-app-text rounded-full mr-2 lg:w-2 lg:h-2 lg:mr-4"></div>
          <div class="text-lg leading-none font-display tracking-[var(--tracking-tight)] lg:text-[32px]">
            Education
          </div>
        </div>
        <div>
          <p class="text-sm leading-[1.4] tracking-[var(--tracking-tight)] text-app-gray-400 mb-6 lg:text-base lg:leading-[1.4] lg:mb-8">
            My academic background in computer science and engineering, providing the foundation for my technical expertise.
          </p>
          <div class="flex flex-wrap gap-3">
            <div class="flex text-sm leading-none tracking-[var(--tracking-tight)] text-app-gray-500 font-medium px-4 py-3 border border-app-gray-200 rounded-[32px] lg:text-base lg:leading-none">
              Bachelor of Technology
            </div>
            <div class="flex text-sm leading-none tracking-[var(--tracking-tight)] text-app-gray-500 font-medium px-4 py-3 border border-app-gray-200 rounded-[32px] lg:text-base lg:leading-none">
              Computer Science
            </div>
          </div>
        </div>
      </div>
      
      <!-- Work History Section -->
      <div class="mb-10 lg:mb-20">
        <div class="flex items-center mb-6 lg:mb-10">
          <div class="w-1.5 h-1.5 flex-shrink-0 bg-app-text rounded-full mr-2 lg:w-2 lg:h-2 lg:mr-4"></div>
          <div class="text-lg leading-none font-display tracking-[var(--tracking-tight)] lg:text-[32px]">
            Work history
          </div>
        </div>
        <Timeline experiences={experiences} />
      </div>
    </div>
    
    <!-- Cover Image -->
    <img
      src="/img/bg_9.jpg"
      alt="Workspace"
      class="w-full object-cover aspect-[1.84] mb-10 lg:aspect-[2.59] lg:mb-20"
      loading="lazy"
    />
    
    <!-- Awards Section -->
    <div class="container mx-auto">
      <div class="max-w-[969px] mx-auto">
        <h2 class="text-lg leading-[1.2] tracking-[var(--tracking-tight)] font-display mb-6 lg:text-[40px] lg:mb-16">
          Some of my achievements
        </h2>
        <div class="grid grid-cols-1 gap-[14px] lg:gap-6">
          {achievements.map((achievement, index) => (
            <div class="flex items-center justify-between pb-[14px] border-b border-app-gray-200 lg:pb-6">
              <div class="flex">
                <span class="text-xs leading-none tracking-[var(--tracking-tight)] mr-1 lg:text-base lg:leading-none lg:mr-2">
                  {index + 1}<sup>st</sup>
                </span>
                <span class="text-sm leading-none tracking-[var(--tracking-tight)] text-app-gray-400 lg:text-2xl lg:leading-none">
                  {achievement.title}
                </span>
              </div>
              <div class="text-sm leading-none tracking-[var(--tracking-tight)] lg:text-base lg:leading-none">
                ({achievement.year})
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  <ContactSection />
</BaseLayout>
