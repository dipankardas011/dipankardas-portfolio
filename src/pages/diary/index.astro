---
import BaseLayout from "../../components/BaseLayout.astro";
import AnimatedTitle from "../../components/AnimatedTitle";
import TopGradient from "../../components/TopGradient";
import { getCollection } from "astro:content";

const entries = (await getCollection("diary")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

// Group entries by year
const entriesByYear = entries.reduce((acc, entry) => {
  const year = entry.data.date.getFullYear();
  if (!acc[year]) acc[year] = [];
  acc[year].push(entry);
  return acc;
}, {} as Record<number, typeof entries>);

const years = Object.keys(entriesByYear).sort((a, b) => Number(b) - Number(a));
---

<BaseLayout
  title="Diary - Dipankar Das"
  description="Monthly engineering diary entries tracking learnings and activities."
>
  <section class="animate-fade-in">
    <div class="relative pt-10 pb-8 md:pt-16 md:pb-12 lg:pt-20 lg:pb-16">
      <TopGradient client:load />
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8 md:mb-14 lg:mb-20">
          <AnimatedTitle 
            client:load 
            title="Diary" 
            subtitle="Monthly log of learnings, activities, and professional development"
          />
        </div>

        <!-- Timeline by Year -->
        <div class="max-w-4xl mx-auto">
          {years.map((year, yearIndex) => (
            <div class="mb-12 lg:mb-16">
              <!-- Year Header -->
              <div class="flex items-center mb-6 lg:mb-8">
                <div class="flex-shrink-0 w-16 h-16 lg:w-20 lg:h-20 rounded-full bg-app-accent flex items-center justify-center">
                  <span class="text-white font-display font-semibold text-lg lg:text-xl tracking-[var(--tracking-tight)]">
                    {year}
                  </span>
                </div>
                <div class="flex-1 h-px bg-app-gray-200 ml-4"></div>
              </div>

              <!-- Entries for this year -->
              <div class="ml-8 lg:ml-10 space-y-3 lg:space-y-4">
                {entriesByYear[year].map((entry) => {
                  const month = entry.data.date.toLocaleDateString("en-US", {
                    month: "long",
                  });
                  return (
                    <a
                      href={`/diary/${entry.id}/`}
                      class="group block bg-white border border-app-gray-200 rounded-2xl p-4 lg:p-6 transition-all duration-300 hover:border-app-accent hover:shadow-md hover:-translate-y-0.5"
                    >
                      <div class="flex items-start justify-between gap-4">
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-3 mb-2">
                            <time class="text-xs lg:text-sm font-medium text-app-accent tracking-[var(--tracking-tight)] uppercase">
                              {month}
                            </time>
                            <svg 
                              xmlns="http://www.w3.org/2000/svg" 
                              class="w-4 h-4 lg:w-5 lg:h-5 text-app-gray-400 transition-transform duration-300 group-hover:translate-x-1 group-hover:text-app-accent" 
                              viewBox="0 0 24 24" 
                              fill="none" 
                              stroke="currentColor" 
                              stroke-width="2" 
                              stroke-linecap="round" 
                              stroke-linejoin="round"
                            >
                              <path d="M5 12h14"></path>
                              <path d="m12 5 7 7-7 7"></path>
                            </svg>
                          </div>
                          <h2 class="text-base lg:text-lg font-display font-semibold text-app-text tracking-[var(--tracking-tight)] mb-1 group-hover:text-app-accent transition-colors">
                            {entry.data.title}
                          </h2>
                          {entry.data.description && (
                            <p class="text-sm lg:text-base text-app-gray-500 tracking-[var(--tracking-tight)] line-clamp-2">
                              {entry.data.description}
                            </p>
                          )}
                        </div>
                      </div>
                    </a>
                  );
                })}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
