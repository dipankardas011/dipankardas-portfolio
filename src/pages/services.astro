---
import BaseLayout from "../components/BaseLayout.astro";
import AnimatedTitle from "../components/AnimatedTitle";
import ServiceCard from "../components/ServiceCard.astro";
import CertBadge from "../components/CertBadge.astro";
import ContactSection from "../components/ContactSection.astro";
import SectionHeader from "../components/SectionHeader.astro";
import { services, certifications } from "../data/services";
---

<BaseLayout
  title="Services - Dipankar Das"
  description="DevOps consulting, Kubernetes expertise, Go development, and sustainability engineering."
>
  <AnimatedTitle title="Services" client:load />
  
  <section class="py-10 lg:pb-14 animate-fade-in">
    <div class="container mx-auto">
      <!-- Intro -->
      <div class="mb-10 lg:mb-[120px]">
        <p class="text-base lg:text-lg text-app-gray-400 leading-[1.4] tracking-[var(--tracking-tight)] max-w-3xl">
          I help teams build reliable, scalable, and cost-efficient infrastructure.
          From CI/CD pipelines to Kubernetes deployments, I bring hands-on experience to every engagement.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8 mb-10 lg:mb-[120px]">
        {services.map((s) => (
          <ServiceCard
            title={s.title}
            icon={s.icon}
            description={s.description}
            skills={s.skills}
            color={s.color}
          />
        ))}
      </div>

      <!-- Certifications -->
      <div class="border-t border-app-gray-100 pt-10 lg:pt-14">
        <SectionHeader 
          title="Certifications & Badges" 
          subtitle="Industry-recognized credentials backing my expertise"
          className="mb-8 lg:mb-10"
        />
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4 lg:gap-6">
          {certifications.map((cert) => (
            <CertBadge
              name={cert.name}
              badgeImage={cert.badgeImage}
              link={cert.link}
            />
          ))}
        </div>
      </div>
    </div>
  </section>

  <ContactSection />
</BaseLayout>
