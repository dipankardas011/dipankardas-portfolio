---
interface Props {
  title: string;
  description: string;
  image?: string;
  links: { label: string; url: string }[];
  tags: string[];
}

const { title, description, image, links, tags } = Astro.props;
---

<div class="bg-white border border-app-border rounded-xl overflow-hidden card-hover">
  {image && (
    <div class="aspect-video bg-app-surface overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  )}
  <div class="p-5">
    <h3 class="text-lg font-semibold text-app-text mb-2">{title}</h3>
    <p class="text-sm text-app-gray leading-relaxed mb-4 line-clamp-3">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map((tag) => (
        <span class="text-xs font-medium px-2 py-1 bg-app-accent-light text-app-accent rounded">
          {tag}
        </span>
      ))}
    </div>
    <div class="flex flex-wrap gap-3">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener"
          class="text-sm font-medium text-app-accent hover:text-app-accent-hover transition-colors link-underline"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</div>
