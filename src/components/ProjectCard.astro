---
interface Props {
  title: string;
  description: string;
  image?: string;
  links: { label: string; url: string }[];
  tags: string[];
}

const { title, description, image, links, tags } = Astro.props;
---

<div class="bg-white border border-app-gray-100 rounded-3xl overflow-hidden transition-all duration-300 hover:shadow-lg">
  {image && (
    <div class="aspect-[1.45] bg-app-surface overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  )}
  <div class="p-6 lg:p-8">
    <h3 class="text-lg lg:text-xl font-display text-app-text mb-2 lg:mb-3 tracking-[var(--tracking-tight)]">{title}</h3>
    <p class="text-sm lg:text-base text-app-gray-400 leading-[1.4] mb-4 lg:mb-6 line-clamp-3 tracking-[var(--tracking-tight)]">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mb-4 lg:mb-6">
      {tags.map((tag) => (
        <span class="text-xs lg:text-sm font-medium px-3 py-1.5 bg-app-surface text-app-gray-500 rounded-lg tracking-[var(--tracking-tight)]">
          {tag}
        </span>
      ))}
    </div>
    <div class="flex flex-wrap gap-3 lg:gap-4">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener"
          class="text-sm lg:text-base font-medium text-app-gray-500 hover:text-app-text transition-colors duration-300 underline underline-offset-4 tracking-[var(--tracking-tight)]"
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</div>
