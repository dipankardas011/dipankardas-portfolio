---
import { socialLinks, siteConfig } from "../data/site";

const year = new Date().getFullYear();
---

<footer class="border-t border-app-gray-100">
  <div class="container mx-auto py-8 lg:py-10">
    <!-- Top Section -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between pb-8 lg:pb-10 border-b border-app-gray-100 gap-8">
      <!-- CTA Text -->
      <div class="max-w-[394px]">
        <p class="text-lg lg:text-[40px] font-display font-semibold text-app-text leading-tight lg:leading-none tracking-[var(--tracking-tight)]">
          Let's work together
        </p>
      </div>
      
      <!-- Contact Links -->
      <div class="flex flex-wrap gap-3 lg:gap-4">
        <a
          href={`mailto:${siteConfig.email}`}
          class="px-4 py-[9px] lg:px-7 lg:py-3 border border-app-gray-200 rounded-[32px] text-sm lg:text-base font-medium text-app-gray-500 hover:border-app-text hover:bg-app-text hover:text-white transition-colors duration-300 tracking-[var(--tracking-tight)]"
        >
          {siteConfig.email}
        </a>
        <a
          href={socialLinks.linkedin}
          target="_blank"
          rel="noopener"
          class="px-4 py-[9px] lg:px-7 lg:py-3 bg-app-text text-white border border-app-text rounded-[32px] text-sm lg:text-base font-medium hover:bg-app-gray-600 transition-colors duration-300 tracking-[var(--tracking-tight)] flex items-center gap-1.5"
        >
          <div class="w-4 h-4 flex-shrink-0">
            <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="1" y="1" width="14" height="14" rx="7" fill="currentColor"></rect>
              <path d="M6.30928 4.84607C6.30928 5.31335 5.90426 5.69215 5.40464 5.69215C4.90502 5.69215 4.5 5.31335 4.5 4.84607C4.5 4.3788 4.90502 4 5.40464 4C5.90426 4 6.30928 4.3788 6.30928 4.84607Z" fill="#171717"></path>
              <path d="M4.62371 6.31405H6.1701V11H4.62371V6.31405Z" fill="#171717"></path>
              <path d="M8.65979 6.31405H7.1134V11H8.65979C8.65979 11 8.65979 9.52479 8.65979 8.60243C8.65979 8.04881 8.84883 7.49277 9.60309 7.49277C10.4555 7.49277 10.4504 8.21727 10.4464 8.77855C10.4412 9.51222 10.4536 10.2609 10.4536 11H12V8.52686C11.9869 6.94769 11.5754 6.22004 10.2216 6.22004C9.4177 6.22004 8.91936 6.58503 8.65979 6.91525V6.31405Z" fill="#171717"></path>
            </svg>
          </div>
          LinkedIn
        </a>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="pt-8 lg:pt-10 flex flex-col md:flex-row items-start md:items-center justify-between gap-6">
      <!-- Social Links -->
      <div class="flex flex-wrap gap-3 lg:gap-4">
        <a
          href={socialLinks.github}
          target="_blank"
          rel="noopener"
          class="px-4 py-[9px] lg:py-3 border border-app-gray-200 rounded-[32px] text-sm lg:text-base font-medium text-app-gray-500 hover:border-app-text hover:text-app-text transition-colors duration-300 tracking-[var(--tracking-tight)] flex items-center gap-1.5"
        >
          <div class="w-4 h-4 flex-shrink-0">
            <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8C0 11.54 2.29 14.53 5.47 15.59C5.87 15.66 6.02 15.42 6.02 15.21C6.02 15.02 6.01 14.39 6.01 13.72C4 14.09 3.48 13.23 3.32 12.78C3.23 12.55 2.84 11.84 2.5 11.65C2.22 11.5 1.82 11.13 2.49 11.12C3.12 11.11 3.57 11.7 3.72 11.94C4.44 13.15 5.59 12.81 6.05 12.6C6.12 12.08 6.33 11.73 6.56 11.53C4.78 11.33 2.92 10.64 2.92 7.58C2.92 6.71 3.23 5.99 3.74 5.43C3.66 5.23 3.38 4.41 3.82 3.31C3.82 3.31 4.49 3.1 6.02 4.13C6.66 3.95 7.34 3.86 8.02 3.86C8.7 3.86 9.38 3.95 10.02 4.13C11.55 3.09 12.22 3.31 12.22 3.31C12.66 4.41 12.38 5.23 12.3 5.43C12.81 5.99 13.12 6.7 13.12 7.58C13.12 10.65 11.25 11.33 9.47 11.53C9.76 11.78 10.01 12.26 10.01 13.01C10.01 14.08 10 14.94 10 15.21C10 15.42 10.15 15.67 10.55 15.59C13.71 14.53 16 11.53 16 8C16 3.58 12.42 0 8 0Z" fill="currentColor"/>
            </svg>
          </div>
          GitHub
        </a>
        <a
          href={socialLinks.twitter}
          target="_blank"
          rel="noopener"
          class="px-4 py-[9px] lg:py-3 border border-app-gray-200 rounded-[32px] text-sm lg:text-base font-medium text-app-gray-500 hover:border-app-text hover:text-app-text transition-colors duration-300 tracking-[var(--tracking-tight)] flex items-center gap-1.5"
        >
          <div class="w-4 h-4 flex-shrink-0">
            <svg fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
              <path d="M12.6 0h2.454l-5.36 6.778L16 16h-4.937l-3.867-5.594L2.771 16H.316l5.733-7.25L0 0h5.063l3.495 5.114L12.6 0Zm-.86 14.376h1.36L4.323 1.539H2.865l8.875 12.837Z" fill="currentColor"/>
            </svg>
          </div>
          Twitter
        </a>
        <a
          href={socialLinks.gitlab}
          target="_blank"
          rel="noopener"
          class="px-4 py-[9px] lg:py-3 border border-app-gray-200 rounded-[32px] text-sm lg:text-base font-medium text-app-gray-500 hover:border-app-text hover:text-app-text transition-colors duration-300 tracking-[var(--tracking-tight)] flex items-center gap-1.5"
        >
          <div class="w-4 h-4 flex-shrink-0">
            <svg viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M8 14.545L10.667 6.182H5.333L8 14.545Z" fill="currentColor"/>
              <path d="M8 14.545L5.333 6.182H1.09L8 14.545Z" fill="currentColor" opacity="0.8"/>
              <path d="M1.09 6.182L0.545 7.818C0.505 7.945 0.505 8.082 0.545 8.209C0.585 8.336 0.664 8.445 0.772 8.518L8 14.545L1.09 6.182Z" fill="currentColor" opacity="0.6"/>
              <path d="M1.09 6.182H5.333L3.636 1.091C3.545 0.818 3.182 0.818 3.091 1.091L1.09 6.182Z" fill="currentColor" opacity="0.9"/>
              <path d="M8 14.545L10.667 6.182H14.91L8 14.545Z" fill="currentColor" opacity="0.8"/>
              <path d="M14.91 6.182L15.455 7.818C15.495 7.945 15.495 8.082 15.455 8.209C15.415 8.336 15.336 8.445 15.228 8.518L8 14.545L14.91 6.182Z" fill="currentColor" opacity="0.6"/>
              <path d="M14.91 6.182H10.667L12.364 1.091C12.455 0.818 12.818 0.818 12.909 1.091L14.91 6.182Z" fill="currentColor" opacity="0.9"/>
            </svg>
          </div>
          GitLab
        </a>
      </div>
      
      <!-- Copyright -->
      <div class="text-sm lg:text-base text-app-gray-500 tracking-[var(--tracking-tight)]">
        &copy; {year} {siteConfig.name}
      </div>
    </div>
  </div>
</footer>
