---
import { navItems, siteConfig } from "../data/site";

const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm border-b border-app-border"
>
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-app-text hover:text-app-accent transition-colors">
      {siteConfig.name}
    </a>

    <!-- Desktop nav -->
    <ul class="hidden md:flex items-center gap-8">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "text-sm font-medium transition-colors link-underline",
              currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                ? "text-app-accent"
                : "text-app-gray hover:text-app-text",
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-app-gray hover:text-app-text"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile nav -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-app-border bg-white">
    <ul class="px-4 py-4 space-y-3">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "block text-sm font-medium py-1",
              currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                ? "text-app-accent"
                : "text-app-gray hover:text-app-text",
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
