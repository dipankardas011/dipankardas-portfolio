---
import { navItems, siteConfig } from "../data/site";

const currentPath = Astro.url.pathname;
---

<header class="relative z-50">
  <div class="container mx-auto pt-6">
    <nav class="relative flex items-center justify-between">
      <!-- Logo (Left - takes 1/3 width on desktop) -->
      <a href="/" class="flex md:flex-1 text-lg md:text-xl font-display text-app-text hover:text-app-accent transition-colors tracking-tight">
        {siteConfig.name}
      </a>

      <!-- Desktop nav (Center - takes 1/3 width and centers content) -->
      <ul class="hidden md:flex md:flex-1 md:justify-center items-center gap-6 lg:gap-10">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "text-sm md:text-base font-medium transition-colors duration-300",
                "tracking-[var(--tracking-tight)]",
                currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                  ? "text-app-text"
                  : "text-app-gray-500 hover:text-app-text",
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- Right section (takes 1/3 width on desktop) - Empty for now, can add location/time later -->
      <div class="hidden md:flex md:flex-1 md:justify-end">
        <!-- Placeholder for future content like location/time -->
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="flex md:hidden p-2 text-app-gray-500 hover:text-app-text transition-colors"
        aria-label="Toggle menu"
      >
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>

    <!-- Mobile nav (full screen overlay) -->
    <div id="mobile-menu" class="hidden fixed inset-0 z-50 bg-app-text text-white pt-20 px-6">
      <ul class="space-y-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "block text-base font-medium py-2 tracking-[var(--tracking-tight)] transition-colors duration-300",
                currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                  ? "text-white"
                  : "text-white/70 hover:text-white",
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  const menuIcon = document.getElementById("menu-icon");
  const closeIcon = document.getElementById("close-icon");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
    menuIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
    
    // Prevent scrolling when menu is open
    document.body.style.overflow = menu?.classList.contains("hidden") ? "auto" : "hidden";
  });
</script>
