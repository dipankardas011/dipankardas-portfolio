---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  icon: string;
  description: string;
  skills: string[];
}

const { title, icon, description, skills } = Astro.props;
---

<div class="bg-white border border-app-border rounded-xl p-6 card-hover">
  <div class="w-12 h-12 bg-app-accent-light rounded-lg flex items-center justify-center mb-4">
    <Icon name={icon} class="w-6 h-6 text-app-accent" />
  </div>
  <h3 class="text-lg font-semibold text-app-text mb-2">{title}</h3>
  <p class="text-sm text-app-gray leading-relaxed mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="text-xs font-medium px-2 py-1 bg-app-surface text-app-gray rounded">
        {skill}
      </span>
    ))}
  </div>
</div>
