---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  icon: string;
  description: string;
  skills: string[];
  color?: string;
}

const { title, icon, description, skills, color = "#06b6d4" } = Astro.props;
---

<div class="bg-app-surface-alt rounded-2xl p-6">
  <div 
    class="w-10 h-10 lg:w-[52px] lg:h-[52px] rounded-lg flex items-center justify-center mb-4 lg:mb-6 font-display font-bold text-white text-sm lg:text-base"
    style={`background-color: ${color}`}
  >
    <Icon name={icon} class="w-5 h-5 lg:w-6 lg:h-6" />
  </div>
  <h3 class="text-lg lg:text-xl font-display font-semibold text-app-text mb-2 lg:mb-3 tracking-[var(--tracking-tight)]">{title}</h3>
  <p class="text-sm lg:text-base text-app-gray-300 leading-[1.4] mb-4 lg:mb-6 tracking-[var(--tracking-tight)]">{description}</p>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="text-xs lg:text-sm font-medium px-3 py-1.5 bg-white text-app-gray-500 rounded-lg tracking-[var(--tracking-tight)]">
        {skill}
      </span>
    ))}
  </div>
</div>
