---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  abbreviation: string;
  icon: string;
  description: string;
  skills: string[];
  color: string;
}

const { title, abbreviation, icon, description, skills, color } = Astro.props;
---

<div class="bg-app-surface-alt rounded-2xl p-6">
  <div class="flex items-center mb-4">
    <div 
      class="w-10 h-10 lg:w-[52px] lg:h-[52px] rounded-lg flex items-center justify-center font-display text-sm lg:text-base leading-none tracking-[var(--tracking-tight)] mr-4"
      style={`background-color: ${color}`}
    >
      <Icon name={icon} class="w-5 h-5 lg:w-6 lg:h-6 text-gray-600" />
    </div>
    <h3 class="leading-none font-medium tracking-[var(--tracking-tight)] lg:text-xl lg:leading-none text-app-text">{title}</h3>
  </div>
  <p class="text-sm leading-[1.4] tracking-[var(--tracking-tight)] text-app-gray-300">{description}</p>
</div>
